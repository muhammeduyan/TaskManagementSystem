<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="300.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.taskmanagementsystem.controller.TaskerController">
    <Label layoutX="30.0" layoutY="30.0" text="EMP ID:" />
    <Label layoutX="30.0" layoutY="70.0" text="TASK ID:" />
    <Label layoutX="30.0" layoutY="110.0" text="DATE:" />
    <Label layoutX="30.0" layoutY="150.0" text="TIME:" />

    <TextField fx:id="txtEmployeeId" layoutX="100.0" layoutY="26.0" promptText="e.g. 1" />
    <TextField fx:id="txtTaskId" layoutX="100.0" layoutY="66.0" promptText="e.g. 101" />
    <TextField fx:id="txtTaskDate" layoutX="100.0" layoutY="106.0" promptText="YYYY-MM-DD" />
    <TextField fx:id="txtTaskTime" layoutX="100.0" layoutY="146.0" promptText="HH:MM:SS" />

    <Button layoutX="270.0" layoutY="26.0" mnemonicParsing="false" onAction="#getTaskers" text="GET" />
    <Button layoutX="270.0" layoutY="146.0" mnemonicParsing="false" onAction="#clearTasker" text="CLEAR" />

    <Button layoutX="30.0" layoutY="200.0" mnemonicParsing="false" onAction="#saveTasker" text="ASSIGN" />
    <Button layoutX="100.0" layoutY="200.0" mnemonicParsing="false" onAction="#deleteTasker" text="REMOVE" />
    <Button layoutX="180.0" layoutY="200.0" mnemonicParsing="false" onAction="#close" text="CLOSE" />
</AnchorPane>
