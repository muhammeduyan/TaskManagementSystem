<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.taskmanagementsystem.controller.TaskController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="TASK MANAGEMENT" textFill="#8e44ad">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
    </Label>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Task Id:" minWidth="80.0"/>
        <TextField fx:id="txtId" promptText="Enter ID" HBox.hgrow="ALWAYS"/>
        <Button text="Fetch" onAction="#onFetch" minWidth="60.0"/>
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Title:" minWidth="80.0"/>
        <TextField fx:id="txtTitle" promptText="Task Title" HBox.hgrow="ALWAYS"/>
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Desc:" minWidth="80.0"/>
        <TextField fx:id="txtDescription" promptText="Description" HBox.hgrow="ALWAYS"/>
    </HBox>


    <HBox alignment="CENTER" spacing="10.0" style="-fx-padding: 10 0 0 0;">
        <Button text="Save" onAction="#onSave" minWidth="60.0" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
        <Button text="Update" onAction="#onUpdate" minWidth="60.0" style="-fx-background-color: #f39c12; -fx-text-fill: white;"/>
        <Button text="Delete" onAction="#onDelete" minWidth="60.0" style="-fx-background-color: #c0392b; -fx-text-fill: white;"/>
        <Button text="Close" onAction="#onClose" minWidth="60.0"/>
    </HBox>
</VBox>